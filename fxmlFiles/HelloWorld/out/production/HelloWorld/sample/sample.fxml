<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="30" vgap="10" gridLinesVisible="false">
    <Button text="Captain America" GridPane.rowIndex="0" GridPane.columnIndex="0" onAction="#onCapTapped"></Button>
    <Button text="Hulk" GridPane.rowIndex="0" GridPane.columnIndex="1" onAction="#onHulkTapped"></Button>
    <Button text="Iron Man" GridPane.rowIndex="1" GridPane.columnIndex="0" onAction="#onIronTapped"></Button>
    <Button text="Thor" GridPane.rowIndex="1" GridPane.columnIndex="1" onAction="#onThorTapped"></Button>
    <TextField fx:id="textfieldOne" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
</GridPane>